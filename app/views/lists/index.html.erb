<div class="container">
  <h1>Lists#index</h1>
  <p>Find me in app/views/lists/index.html.erb</p>
  <div class="row">
    <div class="lists col-8">
      <% @lists.each do |list| %>
        <%= link_to list.name, list_path(list) %>
      <% end %>
    </div>
    <div class="form col-4">
      <h1>New List</h1>
      <%= render "form", list: @list %>
    </div>
  </div>
</div>
